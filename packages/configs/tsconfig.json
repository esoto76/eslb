{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"],
      "@consts": ["./src/consts/index.ts"],
      "@dTypes": ["./src/dTypes/index.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "rollup.config.js", "scripts", "node_modules"]
}
